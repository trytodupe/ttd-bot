# === auto_ping ===
# When group messages contain any alias, @ the mapped QQ number (only if that user is in the group).
# Matching is case-insensitive.
#
# Option A: simple alias -> qq mapping
# (JSON or Python-literal dict are both supported)
auto_ping_alias_map={"bob":12345678,"alice":87654321}
# auto_ping_alias_map='{"bob":12345678,"alice":87654321}'
#
# Option B: qq with multiple aliases
auto_ping_targets=[{"qq":12345678,"aliases":["bob","b","小波"]}]
# auto_ping_targets='[{"qq":12345678,"aliases":["bob","b","小波"]}]'
